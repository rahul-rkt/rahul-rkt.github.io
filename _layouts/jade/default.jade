doctype html
html(
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    itemscope
    itemtype="http://schema.org/Person"
)

    !="{% include head.html %}"

    body.body
        <!--[if lt IE 9]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->


        input#toggle(type="checkbox")


        nav.nav
            label.toggle-controller(for="toggle") â˜°

            div.nav-list
                ul.nav-items
                    !="{% for map in site.nav %}"
                        li.nav-item
                            a(href!="{{ map[1] }}")
                                !="{{ map[0] }}"
                    !="{% endfor %}"


        div.animation-wrapper
            header.header
                div.branding
                    a(href!="{{ site.url }}")
                        span.logo


            main.main
                div.content
                    !="{{ content }}"
                    !="{% include scripts.html %}"


            footer.footer
                div.feed
                    a(href!="/feed.xml")
                        span.rss

                p.copyright &copy; &nbsp;
                    !='{{ site.time | date: "%Y" }}'
                    a(href!="/about") &nbsp; R
